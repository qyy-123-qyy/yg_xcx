<!--pages/goods_list/goods_list.wxml-->
<searchinput></searchinput>
<tabs tabs="{{tabs}}" bindtabsItemChange="handelTabsItemChange">
  <block wx:if="{{tabs[0].isActive}}">
    <view class="first_tab">
    <navigator class="goods_item"  url="" open-type="navigate"
    wx:for="{{goodsList}}" wx:key="goods_id" url="/pages/goods_detail/goods_detail?goods_id={{item.goods_id}}"
    >
      <!-- 左侧 图片容器 -->
      <view class="goods_img_wrap">
        <image class="" src="{{item.goods_small_logo?item.goods_small_logo:'http://image2.suning.cn/uimg/b2c/newcatentries/0070078057-000000000634917020_1_800x800.jpg'}}" mode="widthFix" />        
      </view>
      <!-- 右侧 内容容器 -->
       <view class="goods_info_wrap">
         <view class="goods_name">{{item.goods_name}}</view>
         <view class="goods_price">{{item.goods_price}}</view>       
      </view>
    </navigator>
      </view>
  </block>
  <block wx:elif="{{tabs[1].isActive}}">1</block>
  <block wx:else>2</block>
</tabs>